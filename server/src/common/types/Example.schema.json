{
  "$ref": "#/definitions/Example",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Example": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "trace": {
          "type": "string"
        },
        "dataset": {
          "type": "string"
        },
        "organisation": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "annotations": {
          "type": "object",
          "additionalProperties": true,
          "description": "Client-set annotations for the Example (for things more complex than a tag)"
        },
        "spans": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          },
          "description": "Stripped-down spans (name, id, attributes e.g. input, parent) for example input; not full Span shape"
        },
        "input": {
          "description": "Alternative to spans; any value"
        },
        "outputs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "good": {},
            "bad": {}
          }
        },
        "metrics": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Metric"
          }
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "dataset",
        "organisation",
        "created",
        "updated"
      ],
      "type": "object"
    },
    "Metric": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["javascript", "llm", "number", "contains", "equals", "not_contains", "not_equals", "similar", "system"]
        },
        "provider": {
          "type": "string",
          "enum": ["openai", "anthropic", "google", "azure", "bedrock", "other"]
        },
        "model": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "promptCriteria": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "value": {
          "description": "For type contains|equals|not_contains|not_equals",
          "oneOf": [{ "type": "string" }, { "type": "number" }]
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["id", "type"],
      "type": "object"
    }
  }
}

