{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ScoreResponse",
  "definitions": {
    "ScoreResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Fraction where 1 is a perfect score, and 0 is the worst score."
        },
        "message": {
          "type": "string",
          "description": "A short bullet-point explanation of upto 100 words."
        }
      },
      "required": [
        "score",
        "message"
      ]
    }
  }
}

