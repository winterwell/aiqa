{
  "$ref": "#/definitions/Span",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Span": {
      "additionalProperties": true,
      "properties": {
        "@timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "name": {
          "type": "string"
        },
        "kind": {
          "type": "integer",
          "description": "SpanKind: INTERNAL=0, SERVER=1, CLIENT=2, PRODUCER=3, CONSUMER=4"
        },
        "parent_span_id": {
          "type": "string"
        },
        "start_time": {
          "type": "number",
          "description": "Epoch milliseconds"
        },
        "end_time": {
          "type": "number",
          "description": "Epoch milliseconds"
        },
        "status": {
          "type": "object",
          "properties": {
            "code": {
              "type": "integer",
              "description": "SpanStatusCode: UNSET=0, OK=1, ERROR=2"
            },
            "message": {
              "type": "string"
            }
          }
        },
        "attributes": {
          "type": "object",
          "additionalProperties": true
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "context": {
                "type": "object",
                "properties": {
                  "traceId": { "type": "string" },
                  "spanId": { "type": "string" },
                  "traceFlags": { "type": "integer" },
                  "traceState": { "type": "string" }
                }
              },
              "attributes": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "time": {
                "type": "number",
                "description": "Epoch milliseconds"
              },
              "attributes": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "duration": {
          "type": "number",
          "description": "Duration in milliseconds"
        },
        "ended": {
          "type": "boolean"
        },
        "resource": {
          "type": "object",
          "properties": {
            "attributes": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "instrumentationLibrary": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "droppedAttributesCount": {
          "type": "integer"
        },
        "droppedEventsCount": {
          "type": "integer"
        },
        "droppedLinksCount": {
          "type": "integer"
        },
        "trace_id": {
          "type": "string",
          "description": "OpenTelemetry trace ID (32 hex characters)"
        },
        "spanId": {
          "type": "string",
          "description": "OpenTelemetry span ID (16 hex characters)"
        },
        "traceFlags": {
          "type": "integer",
          "description": "OpenTelemetry trace flags"
        },
        "trace": {
          "type": "object",
          "properties": {
            "id": { "type": "string" }
          }
        },
        "transaction": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "type": { "type": "string" },
            "duration": { "type": "number" }
          }
        },
        "span": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "duration": {
              "type": "object",
              "properties": {
                "us": { "type": "integer" }
              }
            },
            "parent": {
              "type": "object",
              "properties": {
                "id": { "type": "string" }
              }
            }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "name": { "type": "string" }
          }
        },
        "organisation": {
          "type": "string"
        },
        "dataset": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "experiment": {
          "type": "string"
        },
        "client_span_id": {
          "type": "string",
          "description": "Client-set span ID (overrides OpenTelemetry span ID if provided)"
        },
        "client_trace_id": {
          "type": "string",
          "description": "Client-set trace ID (overrides OpenTelemetry trace ID if provided)"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Client-set tags for the span"
        },
        "input_hash": {
          "type": "string",
          "description": "Hash of the input for looking up same-input spans"
        }
      },
      "required": [
        "name",
        "kind",
        "start_time",
        "end_time",
        "status",
        "attributes",
        "links",
        "events",
        "duration",
        "ended",
        "resource",
        "instrumentationLibrary",
        "droppedAttributesCount",
        "droppedEventsCount",
        "droppedLinksCount",
        "organisation"
      ],
      "type": "object"
    }
  }
}

